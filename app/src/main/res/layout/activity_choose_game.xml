<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lin_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/btn_others"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/photo_gallery"/>
            <ImageButton
                android:id="@+id/btn_animals"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/animal_shelter"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/tv_what_is_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Что такое?"
                android:textColor="#3F51B5"
                android:textSize="32dp"
                android:gravity="start"
                android:fontFamily="@font/font2"/>

            <TextView
                android:id="@+id/tv_who_is_it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="80dp"
                android:text="Кто такой?"
                android:textColor="#3F51B5"
                android:textSize="32dp"
                android:fontFamily="@font/font2"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_game2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/btn_cartoon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/music"/>
            <ImageButton
                android:id="@+id/btn_puzzle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="150dp"
                android:background="@drawable/puzzle" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/tv_sing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="25dp"
                android:text="Споем?"
                android:textColor="#3F51B5"
                android:textSize="32dp"
                android:fontFamily="@font/font2"/>
            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="110dp"
                android:text="Соберем?"
                android:textColor="#3F51B5"
                android:textSize="32dp"
                android:fontFamily="@font/font2" />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_back_main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/undo" />

</RelativeLayout>